ดึงข้อมูล user information มาทั้งหมด
$sql="SELECT * FROM user ORDER BY ID ASC";

ค้นหา $keyword
SELECT * FROM user WHERE ID LIKE '%$keyword%' OR Username LIKE '%$keyword% 'OR Name LIKE '%$keyword%' OR Email LIKE '%$keyword%' OR Birthday LIKE '%$keyword%' OR Role LIKE '%$keyword%' ORDER BY ID ASC;

