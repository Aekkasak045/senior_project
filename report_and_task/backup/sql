SELECT id,username,first_name,email,hbd,role FROM users
WHERE id LIKE "%" AND
username LIKE "%" AND
first_name LIKE "%" AND
email LIKE "%" AND
hbd LIKE "%" AND
role LIKE "%" ;

SELECT id,username,first_name,email,hbd,role FROM users
WHERE (id BETWEEN 1 AND 10) AND
username LIKE "%" AND
first_name LIKE "%" AND
email LIKE "%" AND
(hbd BETWEEN 20020701 AND 20050701) AND
role LIKE "%";

ช่วง id
ช่วง hbd
เลือก role